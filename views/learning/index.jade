          .row
            .col-lg-12.col-md-12
              h1 Extra data
              .col-lg-3.col-md-6
                .panel.panel-default
                  .panel-heading
                    h3.panel-title
                      i.fa.fa-bar-chart-o.fa-fw
                      |  New Skill
                  .panel-body
                    h1= newSkill 

              .col-lg-3.col-md-6
                .panel.panel-default
                  .panel-heading
                    h3.panel-title
                      i.fa.fa-money.fa-fw
                      |  All tasks
                  .panel-body
                    .table-responsive
                      table.table.table-bordered.table-hover.table-striped
                        thead
                          tr
                            th Tasks
                        tbody
                          each task, index  in tasks.tasks.active 
                            tr
                              td= task

                        .text-right
                          a(href='#')
                            | View All Transactions 
                            i.fa.fa-arrow-circle-right

              .col-lg-4
                .panel.panel-default
                  .panel-heading
                    h3.panel-title
                      i.fa.fa-clock-o.fa-fw
                      |  Messages send
                  .panel-body
                    each message in messages
                      .list-group
                        a.list-group-item(href='#')
                          span.badge #{moment(message.created).fromNow()}
                          i.fa.fa-fw.fa-calendar #{ message.title + " -> " + message.author}
